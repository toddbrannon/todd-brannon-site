<% include partials/header %>

    <!-- CONTACT FORM HEAD -->
<div class="contact">
    <section id="contact" class="bg-light py-5">
        <div class="container contact-form">
            <div class="row justify-content-center">
                <div class="col-lg-6 text-center">
                    <div class="py-5">
                        <h1 class="display-4">Contact Me</h1>
                        <p class="lead">Fill out the form below and I will respond as soon as possible.
                        </p>

                        <% if (errors) {%>
                            <% errors.forEach(function(error){ %>
                                <div class="alert alert-danger">
                                    <p>
                                        <%= error.msg %>
                                    </p>
                                </div>
                                <% });%>
                                    <% }%>

                                        <div class="form">
                                            <form id="sub-form" method="POST" action="/contact" novalidate>
                                                <div class="form-group">
                                                    <input type="text" class="form-control form-control-lg" name="firstName" placeholder="First Name">
                                                </div>
                                                <div class="form-group">
                                                    <input type="text" class="form-control form-control-lg" name="lastName" placeholder="Last Name">
                                                </div>
                                                <div class="form-group">
                                                    <input type="email" class="form-control form-control-lg" name="emailAddress" placeholder="Email">
                                                </div>
                                                <div class="form-group">
                                                    <input type="text" class="form-control form-control-lg" name="phoneNumber" placeholder="Phone Number">
                                                </div>
                                                <div class="form-group">
                                                    <textarea id="textarea" rows="4" class="form-control form-control-lg" name="message" placeholder="your message here..."></textarea>
                                                </div>
                                                <!--<div class="form-group">
                                                    <div class="g-recaptcha" 
                                                    data-sitekey="6LdtwBMTAAAAAM0zUnjLDIafzJ-y3Sew20uo0IZ7"></div>
                                                </div>-->
                                                <input type="submit" class="btn cta">
                                            </form>
                                        </div>

                                        <!-- <input type="submit" class="btn btn-primary btn-block"> -->
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>



    <% include partials/footer %>